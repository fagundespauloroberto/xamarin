<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="FormsGallery.EntryDemoPage">
	<StackLayout>
		<Label x:Name="Header" Text="Entry" FontSize="50" FontAttributes="Bold" HorizontalOptions="Center" />
		<Entry Keyboard="Email" Placeholder="Enter email address" VerticalOptions="CenterAndExpand" />
		<Entry Keyboard="Text" IsPassword="True" Placeholder="Enter password" VerticalOptions="CenterAndExpand" />
		<Entry Keyboard="Telephone" Placeholder="Enter phone number" VerticalOptions="CenterAndExpand" />
	</StackLayout>
</ContentPage>