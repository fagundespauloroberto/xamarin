<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:converters="clr-namespace:FormsGallery.Converters;assembly=FormsGallery"
			 x:Class="FormsGallery.LabelDemoPage">
	<StackLayout>
		<Label x:Name="Header" Text="Label" FontSize="50" FontAttributes="Bold" HorizontalOptions="Center" />
		<Label Text="Xamarin.Forms is a cross-platform natively backed UI toolkit abstraction that allows developers to easily create user interfaces that can be shared across Android, iOS, and Windows Phone."
				Font="{x:Static converters:Defaults.LargeFont}"
				VerticalOptions="CenterAndExpand" />
	</StackLayout>
</ContentPage>