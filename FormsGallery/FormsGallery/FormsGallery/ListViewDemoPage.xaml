						<support:Person Name="Eugenie"	Birthday="5/5/1979"  FavoriteColor="Gray" />
						<support:Person Name="Freddie"	Birthday="6/30/1980" FavoriteColor="Green" />
						<support:Person Name="Greta" Birthday="7/15/1981" FavoriteColor="Lime" />
						<support:Person Name="Harold" Birthday="8/10/1982" FavoriteColor="Maroon" />
						<support:Person Name="Irene" Birthday="9/25/1983" FavoriteColor="Navy" />
						<support:Person Name="Jonathan" Birthday="10/10/1984" FavoriteColor="Olive" />
						<support:Person Name="Kathy" Birthday="11/20/1985" FavoriteColor="Purple" />
						<support:Person Name="Larry" Birthday="12/5/1986" FavoriteColor="Red" />
						<support:Person Name="Monica" Birthday="1/5/1975"  FavoriteColor="Silver" />
						<support:Person Name="Nick" Birthday="2/10/1976" FavoriteColor="Teal" />
						<support:Person Name="Olive" Birthday="3/20/1977" FavoriteColor="White" />
						<support:Person Name="Pendleton" Birthday="4/10/1978" FavoriteColor="Yellow" />
						<support:Person Name="Queenie"	Birthday="5/15/1979" FavoriteColor="Aqua" />
						<support:Person Name="Rob"	Birthday="6/30/1980" FavoriteColor="Blue" />
						<support:Person Name="Sally" Birthday="7/5/1981"  FavoriteColor="Fuchsia" />
						<support:Person Name="Timothy"	Birthday="8/30/1982" FavoriteColor="Green" />
						<support:Person Name="Uma"	Birthday="9/10/1983" FavoriteColor="Lime" />
						<support:Person Name="Victor" Birthday="10/20/1984" FavoriteColor="Maroon" />
						<support:Person Name="Wendy" Birthday="11/5/1985" FavoriteColor="Navy" />
						<support:Person Name="Xavier" Birthday="12/30/1986" FavoriteColor="Olive" />
