					</x:Array>
				</ListView.ItemsSource>
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell d:DataContext="{d:DesignInstance d:Type=support:Person}">
							<StackLayout Padding="0 5" Orientation="Horizontal">
								<BoxView Color="{Binding FavoriteColor}" />
								<StackLayout VerticalOptions="Center" Spacing="0">
									<Label Text="{Binding Name}" />
									<Label Text="{Binding Birthday, StringFormat='{}Born {0:d}'}" />
								</StackLayout>
							</StackLayout>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
	</StackLayout>
</ContentPage>