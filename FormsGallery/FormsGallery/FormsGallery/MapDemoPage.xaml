<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
			 xmlns:formsGallery="clr-namespace:FormsGallery;assembly=FormsGallery"
			 xmlns:support="clr-namespace:FormsGallery.Support;assembly=FormsGallery"
			 x:Class="FormsGallery.MapDemoPage">
	<StackLayout>
		<Label x:Name="Header" Text="Map" FontSize="50" FontAttributes="Bold" HorizontalOptions="Center" />
		<StackLayout>
			<Label x:Name="AndroidOnlyLabel" IsVisible="{Binding Converter={x:Static support:IsPlatformConverter.Instance}, Source={x:Static TargetPlatform.Android}}" Text="Android applications require API key to use the Google Map service." VerticalOptions="CenterAndExpand" FontSize="Large" />
			<maps:Map IsVisible="{Binding IsVisible, Source={x:Reference AndroidOnlyLabel}, Converter={x:Static support:InverseBoolean.Instance}}">
				<maps:Map.Behaviors>
					<support:ApplyRegionBehavior Position="37.79762, -122.40181" />
				</maps:Map.Behaviors>
				<maps:Map.Pins>
					<maps:Pin Label="Xamarin" Position="37.79762, -122.40181" />
				</maps:Map.Pins>
			</maps:Map>
		</StackLayout>
	</StackLayout>
</ContentPage>