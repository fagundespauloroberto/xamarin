<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="FormsGallery.TextCellDemoPage">
	<StackLayout>
		<Label x:Name="Header" Text="TextCell" FontSize="50" FontAttributes="Bold" HorizontalOptions="Center" />
		<TableView Intent="Form">
			<TableRoot>
				<TableSection>
					<TextCell Text="This is a TextCell" Detail="This is some detail text" />
				</TableSection>
			</TableRoot>
		</TableView>
	</StackLayout>
</ContentPage>