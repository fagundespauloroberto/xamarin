<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ShadowPlatformSpecific.ShadowPlatformSpecificPage" xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:android="clr-namespace:MyCompany.Forms.PlatformConfiguration.Android"
    xmlns:ios="clr-namespace:MyCompany.Forms.PlatformConfiguration.iOS" xmlns:tizen="clr-namespace:MyCompany.Forms.PlatformConfiguration.Tizen"
    xmlns:uwp="clr-namespace:MyCompany.Forms.PlatformConfiguration.UWP">
    <Grid Margin="20">
        <Label
            FontAttributes="Bold" HorizontalOptions="Center"
            Text="Effect Exposed by a Platform Specific" />
        <Label
            android:Shadow.IsShadowed="True" ios:Shadow.IsShadowed="True"
            tizen:Shadow.IsShadowed="True" uwp:Shadow.IsShadowed="True"
            FontAttributes="Bold" HorizontalOptions="Center"
            Text="Label Shadow Effect" VerticalOptions="CenterAndExpand" />
    </Grid>
</ContentPage>
